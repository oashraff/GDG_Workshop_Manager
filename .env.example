# GDG EUE Event Manager - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Configuration
NODE_ENV=production
PORT=3000

# Security Configuration
SECRET_KEY=your_secure_random_secret_key_here_change_this_in_production
COOKIE_MAX_AGE=900000

# Session Configuration
SESSION_TIMEOUT=900000

# Authentication Configuration
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Database Configuration (SQLite is used by default)
# DATABASE_PATH=./database.db

# Optional: External Service Configuration
# GOOGLE_ANALYTICS_ID=
# SENTRY_DSN=
# EMAIL_SERVICE_API_KEY=

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# CORS Configuration (if needed for API)
# ALLOWED_ORIGINS=https://yourdomain.com

# Logging Configuration
LOG_LEVEL=info
# LOG_FILE_PATH=./logs/app.log
